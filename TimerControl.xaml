<UserControl x:Class="Platformy_Projekt.TimerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Platformy_Projekt"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <TextBlock Foreground="{DynamicResource TextColorDarkBrush}" FontFamily="Yu Gothic UI Light" FontWeight="Bold" x:Name="Time" HorizontalAlignment="Stretch" TextAlignment="Center" TextWrapping="Wrap" Text="08:00" VerticalAlignment="Center" FontSize="72"/>

    </Grid>
</UserControl>

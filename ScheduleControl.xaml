<UserControl x:Class="Platformy_Projekt.ScheduleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Platformy_Projekt"
             mc:Ignorable="d" 
             Width="940" Height="554.04">
    <Grid>
        <Button Content="UPDATE SCHEDULE" HorizontalAlignment="Center" Margin="0,471,0,0" VerticalAlignment="Top" Height="50" Width="140" IsEnabled="False"/>
        <Grid x:Name="Calendar" Margin="124,67,124,83">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="Monday" VerticalAlignment="Center" Width="99" Height="31" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="Wednesday" VerticalAlignment="Center" Width="99" Height="31" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="Tuesday" VerticalAlignment="Center" Width="99" Height="31" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="Thursday" VerticalAlignment="Center" Width="99" Height="31" Grid.Column="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="Friday" VerticalAlignment="Center" Width="99" Height="31" Grid.Column="4" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="Saturday" VerticalAlignment="Center" Width="99" Height="31" Grid.Column="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="Sunday" VerticalAlignment="Center" Width="99" Height="31" Grid.Column="6" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        </Grid>
        <TextBlock x:Name="Month" Margin="0,10,0,0" TextWrapping="Wrap" Text="January" VerticalAlignment="Top" Height="52" Width="692" FontSize="36" HorizontalAlignment="Center" TextAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" Margin="566,487,0,0" TextWrapping="Wrap" Text="Morning shift" VerticalAlignment="Top" Width="80" TextAlignment="Center" Background="#FFEBED82" IsReadOnly="True"/>
        <TextBox HorizontalAlignment="Left" Margin="651,487,0,0" TextWrapping="Wrap" Text="Evening shift" VerticalAlignment="Top" Width="80" TextAlignment="Center" Background="#FF7186D9" IsReadOnly="True"/>
        <TextBox HorizontalAlignment="Left" Margin="736,487,0,0" TextWrapping="Wrap" Text="Day off" VerticalAlignment="Top" Width="80" TextAlignment="Center" Background="#FFD971D0" IsReadOnly="True"/>
        <TextBox HorizontalAlignment="Left" Margin="821,487,0,0" TextWrapping="Wrap" Text="No info" VerticalAlignment="Top" Width="80" TextAlignment="Center" Background="#FFB9B9B9" IsReadOnly="True"/>

    </Grid>
</UserControl>

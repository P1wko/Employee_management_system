<UserControl x:Class="Platformy_Projekt.MessagesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Platformy_Projekt"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid x:Name="contentGrid" VerticalAlignment="Top"/>

        <Grid x:Name="MakeMessage" Margin="0,400,0,0">
            <Button x:Name="newMessage" Click="WriteMessage" Content="Write message" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="40" Width="143" Margin="10,0,0,10" BorderThickness="3" Background="#FFE0A7A7" BorderBrush="#FF868686"/>
        </Grid>
    </Grid>

</UserControl>

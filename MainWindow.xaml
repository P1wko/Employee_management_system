<Window x:Class="Platformy_Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Platformy_Projekt"
        mc:Ignorable="d"
        Title="EMS" Height="650" Width="1200" Icon="/pobrane.jpg">
    <Grid>
        <Grid Margin="0,0,1025,0" Background="#FFE6AEAE">
            <Grid.RowDefinitions>
                <RowDefinition Height="237*"/>
                <RowDefinition Height="397*"/>
            </Grid.RowDefinitions>
            <Button x:Name="employeesBtn" Content="Employees" Margin="0,98,0,84" Background="{x:Null}" FontWeight="Normal" FontFamily="Yu Gothic UI" FontSize="16" FontStyle="Normal" Click="employeesBtn_Click" IsEnabled="False"/>
            <Button x:Name="messagesBtn" Content="Messages" Margin="0,158,0,24" FontFamily="Yu Gothic UI" FontSize="16" IsEnabled="False"/>
            <Button x:Name="tasksBtn" Content="Tasks" Margin="0,218,0,361" FontSize="16" FontFamily="Yu Gothic UI" Background="#FFEAD0D0" Grid.RowSpan="2" IsEnabled="False"/>
            <Button x:Name="logoutBtn" Content="Log out" Margin="0,332,0,10" Grid.Row="1" IsEnabled="False"/>
            <Button x:Name="timerBtn" Content="Timer" Margin="0,41,0,301" FontSize="16" FontFamily="Yu Gothic UI" Background="#FFEAD0D0" Grid.Row="1" IsEnabled="False"/>
        </Grid>
        <Grid x:Name="contentGrid" Margin="220,40,40,40">
            <TextBox x:Name="login" HorizontalAlignment="Left" Margin="281,215,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="passwd" HorizontalAlignment="Left" Margin="281,238,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <Button x:Name="loginBtn" Content="Button" HorizontalAlignment="Left" Margin="448,265,0,0" VerticalAlignment="Top" Height="47" Width="111" Click="loginBtn_Click"/>
            <TextBox x:Name="dbSrvAddress" HorizontalAlignment="Left" Margin="281,261,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="dbSrvLogin" HorizontalAlignment="Left" Margin="281,307,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="dbSrvPasswd" HorizontalAlignment="Left" Margin="281,330,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="dbSrvName" HorizontalAlignment="Left" Margin="281,284,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        </Grid>

    </Grid>
</Window>
